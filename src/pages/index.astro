---
import Navigation from '../components/Navigation.astro';
import ProductSeriesCard from '../components/ProductSeriesCard.astro';
import Logo from '../components/Logo.astro';
import IconHelper from '../components/IconHelper.astro';
import { Image } from 'astro:assets';
import { ArrowUpRight, MessageCircle, ArrowRight, Instagram } from '@lucide/astro';
import { FEATURES, VALUE_PROPS, TRUST_BAR } from '../data/constants';
import { getAllCategories, getProductsByCategoryWithUniqueColors } from '../data/products';
import { MODEL_IMAGES } from '../data/models';
import '../styles/global.css';
import { initScrollAnimations } from '../scripts/scroll-animations';

// Get products by category with limits
const categories = getAllCategories();
const categoryLimits: Record<string, number> = {
  'sandal': 8,
  'kaos': 4,
  'sepatu': 8,
  'pakaian': 8,
  'aksesoris': 8
};

const productsByCategory = categories.map(category => {
  const allProducts = getProductsByCategoryWithUniqueColors(category);
  const limit = categoryLimits[category] || allProducts.length;
  return {
    category,
    products: allProducts.slice(0, limit)
  };
});

// Category display names
const categoryNames: Record<string, string> = {
  'sandal': 'Sandal',
  'sepatu': 'Sepatu',
  'kaos': 'Kaos',
  'pakaian': 'Pakaian',
  'aksesoris': 'Aksesoris'
};

// Get model images
const heroModelImage = MODEL_IMAGES[0]?.image || null;
const lifestyleImages = MODEL_IMAGES.slice(0, 3);
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/webp" href="/logo.webp" />
		<link rel="apple-touch-icon" href="/logo.webp" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Morutha selalu menjadi pelengkap aktifitas anak. Sandal, sepatu, dan pakaian anak yang dirancang untuk bermain, dibuat dengan aman." />
    <title>Morutha - Pelengkap Aktifitas Anak | Sandal, Sepatu & Pakaian Anak</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@400;600;700;800&family=Quicksand:wght@500;600;700&display=swap" rel="stylesheet">
	</head>
  <body class="min-h-screen flex flex-col text-gray-800 overflow-x-hidden">
    <Navigation />
    
    <!-- Hero Section -->
    <section class="relative overflow-hidden bg-[#F9F7F2] py-16 lg:py-24">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid lg:grid-cols-2 gap-12 items-center">
          <div class="space-y-8 fade-in">
            <div class="inline-flex items-center gap-2 bg-white px-4 py-2 rounded-full border border-teal-100 shadow-sm">
              <span class="text-[#00a8a8] text-xs">✔</span>
              <span class="text-teal-900 text-[10px] font-bold tracking-wide uppercase">Dipercaya 10.000+ Orang Tua</span>
            </div>
            
            <h1 class="text-6xl md:text-7xl font-extrabold text-gray-900 leading-[1.1]">
              Pelengkap<br />
              <span class="text-[#00a8a8] relative">
                Aktifitas Anak
                <svg class="absolute -bottom-2 left-0 w-full" height="8" viewBox="0 0 100 8" preserveAspectRatio="none">
                  <path d="M0,5 Q50,0 100,5" stroke="#00a8a8" stroke-width="4" fill="transparent" />
                </svg>
              </span>
            </h1>
            
            <p class="text-lg text-gray-600 max-w-lg leading-relaxed font-medium">
              Morutha selalu menjadi pelengkap aktifitas anak. Dirancang untuk bermain, dibuat dengan aman. Sandal, sepatu, dan pakaian anak yang tahan lama, stylish, dan nyaman untuk mendukung setiap langkah petualangan si kecil.
            </p>
            
            <div class="flex flex-wrap gap-4">
              <a 
                href="https://shopee.co.id/morutha.id" 
                target="_blank"
                rel="noopener noreferrer"
                class="bg-[#00a8a8] hover:bg-[#008a8a] text-white px-8 py-4 rounded-full font-bold flex items-center gap-2 transition-all shadow-lg hover:-translate-y-0.5"
              >
                <ArrowUpRight size={20} />
                Beli di Shopee
              </a>
              <a 
                href="https://wa.me/6288220168168" 
                target="_blank"
                rel="noopener noreferrer"
                class="bg-white hover:bg-gray-50 text-gray-900 border border-gray-200 px-8 py-4 rounded-full font-bold flex items-center gap-2 transition-all shadow-sm"
              >
                <MessageCircle size={20} class="text-green-500" />
                Hubungi WhatsApp
              </a>
            </div>
          </div>
          
          <div class="relative fade-in">
            <div class="aspect-[4/5] bg-[#FFE8D1] rounded-[40px] overflow-hidden shadow-2xl relative">
              {heroModelImage ? (
                <Image 
                  src={heroModelImage}
                  alt="Happy Child in Morutha Sandals"
                  width={800}
                  height={1000}
                  class="w-full h-full object-cover"
                  loading="eager"
                  format="webp"
                  quality={90}
                />
              ) : (
                <img 
                  src="https://images.unsplash.com/photo-1476234251651-f353703a034d?q=80&w=688&auto=format&fit=crop" 
                  alt="Happy Child in Morutha Sandals"
                  class="w-full h-full object-cover"
                  loading="eager"
                />
              )}
              
              <!-- Product Badge -->
              <div class="absolute bottom-6 left-6 right-6 bg-white/95 backdrop-blur-sm p-5 rounded-3xl flex items-center justify-between shadow-xl">
