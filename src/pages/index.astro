                  <span class="text-[10px] font-bold text-gray-400 uppercase tracking-widest block mb-0.5">10 Seri Tersedia</span>
                  <h3 class="text-lg font-bold text-gray-900">Jelajahi Koleksi Kami</h3>
                </div>
                <a 
                  href="#shop"
                  class="w-12 h-12 bg-[#00a8a8] text-white rounded-full flex items-center justify-center hover:bg-[#008a8a] transition-colors shadow-lg"
                >
                  <ArrowRight size={24} />
                </a>
              </div>
            </div>
            
            <div class="absolute -z-10 -top-8 -right-8 w-64 h-64 bg-teal-50 rounded-full blur-3xl opacity-60"></div>
            <div class="absolute -z-10 -bottom-8 -left-8 w-48 h-48 bg-orange-50 rounded-full blur-2xl opacity-60"></div>
          </div>
        </div>
      </div>
    </section>

    <!-- Trust Bar -->
    <section class="bg-white py-12 border-b border-gray-100">
      <div class="max-w-7xl mx-auto px-4">
        <div class="flex flex-wrap justify-center md:justify-between items-center gap-8 text-gray-400 font-bold uppercase tracking-widest text-[10px]">
          {TRUST_BAR.map((item) => (
            <div key={item.id} class="flex items-center gap-2.5">
              <IconHelper name={item.iconName} size={20} class="text-[#00a8a8]" />
              <span>{item.text}</span>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Mission Section -->
    <section id="story" class="py-24 bg-white overflow-hidden">
      <div class="max-w-4xl mx-auto px-4 text-center space-y-8">
        <h2 class="text-4xl md:text-5xl font-bold text-gray-900 fade-in">Tumbuh Bersama Setiap Langkah</h2>
        <p class="text-lg text-gray-500 leading-relaxed font-medium fade-in">
          Di Morutha, kami percaya masa kanak-kanak adalah perjalanan yang terbaik dijelajahi dengan nyaman. Kami tidak hanya menjual sandal, sepatu, dan pakaian; kami menciptakan fondasi untuk petualangan pertama si kecil Anda.
        </p>
        
        <div class="grid md:grid-cols-3 gap-6 pt-12">
          {FEATURES.map((feature) => (
            <div key={feature.id} class="p-8 rounded-[32px] bg-white border border-gray-100 shadow-sm hover:shadow-md transition-shadow flex flex-col items-center text-center space-y-4 fade-in">
              <div class={`w-14 h-14 bg-gray-50 rounded-full flex items-center justify-center`}>
                <IconHelper name={feature.iconName} size={24} class={feature.iconColor} />
              </div>
              <h3 class="text-xl font-bold">{feature.title}</h3>
              <p class="text-sm text-gray-500 leading-relaxed">{feature.description}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Product Series Grid by Category -->
    <section id="shop" class="py-24 bg-gray-50">
      <div class="max-w-7xl mx-auto px-4">
        <div class="flex justify-between items-end mb-12 fade-in">
          <div class="space-y-2">
            <h2 class="text-4xl font-bold text-gray-900">Koleksi Kami</h2>
            <p class="text-gray-500 font-medium">Berbagai kategori produk untuk si kecil.</p>
          </div>
            <a href="/products" class="flex items-center gap-1 text-[#00a8a8] font-bold hover:gap-2 transition-all">
              Lihat Semua Seri <ArrowRight size={20} />
            </a>
        </div>
        
        {productsByCategory.map(({ category, products }) => (
          <div class="mb-16 last:mb-0 fade-in">
            <div class="flex justify-between items-center mb-8">
              <div>
                <h3 class="text-2xl md:text-3xl font-bold text-gray-900">{categoryNames[category] || category}</h3>
                <p class="text-gray-500 text-sm mt-1">{products.length} produk tersedia</p>
              </div>
            </div>
            
            <div class="grid sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-8">
              {products.map((series) => (
                <ProductSeriesCard key={series.id} series={series} />
              ))}
            </div>
          </div>
        ))}
      </div>
    </section>

    <!-- Value Proposition Section -->
    <section id="why-us" class="py-24 bg-teal-50/30 overflow-hidden">
      <div class="max-w-7xl mx-auto px-4">
        <div class="grid lg:grid-cols-2 gap-16 items-center">
            <div class="flex gap-4">
              <div class="flex-1 space-y-4 pt-12">
                {lifestyleImages[0]?.image ? (
                  <div class="aspect-square bg-white rounded-3xl p-4 shadow-sm fade-in overflow-hidden">
                    <Image 
                      src={lifestyleImages[0].image}
                      alt={lifestyleImages[0].alt}
                      width={600}
                      height={600}
                      class="w-full h-full object-cover rounded-2xl"
                      loading="lazy"
                      format="webp"
                      quality={85}
                    />
                  </div>
                ) : (
                  <div class="aspect-square bg-white rounded-3xl p-4 shadow-sm fade-in">
                    <img 
                      src="https://images.unsplash.com/photo-1503454537195-1dcabb73ffb9?q=80&w=686&auto=format&fit=crop" 
                      class="w-full h-full object-cover rounded-2xl" 
                      alt="Lifestyle 1"
                      loading="lazy"
                    />
                  </div>
                )}
                {lifestyleImages[1]?.image ? (
                  <div class="aspect-square bg-[#F5EDD7] rounded-3xl overflow-hidden shadow-sm fade-in">
                    <Image 
                      src={lifestyleImages[1].image}
                      alt={lifestyleImages[1].alt}
                      width={600}
                      height={600}
                      class="w-full h-full object-cover"
                      loading="lazy"
                      format="webp"
                      quality={85}
                    />
                  </div>
                ) : (
                  <div class="aspect-square bg-[#F5EDD7] rounded-3xl overflow-hidden shadow-sm fade-in">
                    <img 
                      src="https://images.unsplash.com/photo-1469406396016-013bfae5d83e?q=80&w=1170&auto=format&fit=crop" 
                      class="w-full h-full object-cover" 
                      alt="Lifestyle 2"
                      loading="lazy"
                    />
                  </div>
                )}
              </div>
              <div class="flex-1 space-y-4">
                {lifestyleImages[2]?.image ? (
                  <div class="aspect-[3/4] bg-[#FFE8D1] rounded-3xl overflow-hidden shadow-sm fade-in">
                    <Image 
                      src={lifestyleImages[2].image}
                      alt={lifestyleImages[2].alt}
                      width={400}
                      height={533}
                      class="w-full h-full object-cover"
                      loading="lazy"
                      format="webp"
                      quality={85}
                    />
                  </div>
                ) : (
                  <div class="aspect-[3/4] bg-[#FFE8D1] rounded-3xl overflow-hidden shadow-sm fade-in">
                    <img 
                      src="https://images.unsplash.com/photo-1503919545889-aef636e10ad4?q=80&w=687&auto=format&fit=crop" 
                      class="w-full h-full object-cover" 
                      alt="Lifestyle 3"
                      loading="lazy"
                    />
                  </div>
                )}
              </div>
            </div>
          
          <div class="space-y-10">
            <h2 class="text-4xl md:text-5xl font-bold text-gray-900 fade-in">Mengapa Orang Tua Memilih Morutha</h2>
            <div class="space-y-8">
              {VALUE_PROPS.map((prop) => (
                <div key={prop.id} class="flex gap-6 items-start fade-in">
                  <div class="mt-1 w-10 h-10 rounded-full border border-teal-100 flex items-center justify-center bg-white text-[#00a8a8] shadow-sm flex-shrink-0">
                    <IconHelper name={prop.iconName} size={20} />
                  </div>
                  <div class="space-y-1">
                    <h4 class="text-lg font-bold text-gray-900">{prop.title}</h4>
                    <p class="text-gray-500 leading-relaxed font-medium">{prop.description}</p>
                  </div>
                </div>
              ))}
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Final CTA -->
    <section class="py-24 bg-white relative">
      <div class="max-w-4xl mx-auto px-4 text-center space-y-10">
        <h2 class="text-5xl md:text-6xl font-extrabold text-gray-900 fade-in">Ready to Step Up the Fun?</h2>
        <p class="text-lg text-gray-500 max-w-2xl mx-auto font-medium fade-in">
          Join thousands of happy families who trust Morutha for their little ones' adventures. Shop our latest collection today.
        </p>
        
        <div class="flex flex-wrap justify-center gap-4 fade-in">
          <a 
            href="https://shopee.co.id/morutha.id" 
            target="_blank"
            rel="noopener noreferrer"
            class="bg-[#00a8a8] hover:bg-[#008a8a] text-white px-10 py-5 rounded-full font-bold flex items-center gap-2 transition-all shadow-xl shadow-teal-100 text-lg hover:-translate-y-0.5"
          >
            <ArrowUpRight size={24} />
            Beli di Shopee
          </a>
          <a 
            href="https://wa.me/6288220168168" 
            target="_blank"
            rel="noopener noreferrer"
            class="bg-[#25D366] hover:bg-[#128C7E] text-white px-10 py-5 rounded-full font-bold flex items-center gap-2 transition-all shadow-xl shadow-green-100 text-lg hover:-translate-y-0.5"
          >
            <MessageCircle size={24} />
            Chat WhatsApp
          </a>
        </div>
        <p class="text-sm text-gray-400 font-medium fade-in">Gratis ongkir untuk pembelian di atas IDR 300k</p>
      </div>
    </section>

    <!-- Footer -->
    <footer class="bg-white border-t border-gray-100 pt-20 pb-10 mt-auto">
      <div class="max-w-7xl mx-auto px-4 grid md:grid-cols-4 gap-12 mb-20">
        <div class="space-y-6">
          <Logo className="!items-start" />
          <p class="text-sm text-gray-400 font-medium leading-relaxed">
            Sandal, sepatu, dan pakaian anak yang dirancang dengan penuh perhatian untuk si kecil tercinta.
          </p>
        </div>
        
        <div class="space-y-6">
          <h4 class="font-bold text-gray-900 uppercase tracking-widest text-[10px]">Belanja</h4>
          <ul class="space-y-4 text-sm font-medium text-gray-500">
            <li><a href="#shop" class="hover:text-[#00a8a8] transition-colors">Produk Baru</a></li>
            <li><a href="#shop" class="hover:text-[#00a8a8] transition-colors">Terlaris</a></li>
          </ul>
        </div>
        
        <div class="space-y-6">
          <h4 class="font-bold text-gray-900 uppercase tracking-widest text-[10px]">Bantuan</h4>
          <ul class="space-y-4 text-sm font-medium text-gray-500">
            <li><a href="#" class="hover:text-[#00a8a8] transition-colors">Panduan Ukuran</a></li>
            <li><a href="#" class="hover:text-[#00a8a8] transition-colors">FAQ</a></li>
          </ul>
        </div>
        
        <div class="space-y-6">
          <h4 class="font-bold text-gray-900 uppercase tracking-widest text-[10px]">Ikuti Kami</h4>
          <div class="flex gap-4">
            <a href="https://www.instagram.com/morutha.id" target="_blank" rel="noopener noreferrer" class="w-10 h-10 rounded-full border border-gray-200 flex items-center justify-center text-gray-400 hover:text-pink-500 transition-all hover:border-pink-500">
              <Instagram size={20} />
            </a>
            <a href="https://www.tiktok.com/@morutha" target="_blank" rel="noopener noreferrer" class="w-10 h-10 rounded-full border border-gray-200 flex items-center justify-center text-gray-400 hover:text-black transition-all hover:border-black">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M19 8.5c0 .5-.5 1-1 1h-3c-.5 0-1-.5-1-1V5.5c0-.5.5-1 1-1h3c.5 0 1 .5 1 1v3z"/>
                <path d="M9 12a3 3 0 1 0 6 0 3 3 0 1 0-6 0z"/>
                <path d="M9 12V8.5c0-.5.5-1 1-1h4c.5 0 1 .5 1 1V12"/>
              </svg>
            </a>
          </div>
        </div>
      </div>
      
      <div class="max-w-7xl mx-auto px-4 pt-10 border-t border-gray-100">
        <div class="flex flex-wrap justify-between gap-4 text-[10px] font-bold text-gray-400 uppercase tracking-widest mb-2">
          <p>© 2025 Morutha. Hak cipta dilindungi.</p>
          <div class="flex gap-8">
            <a href="#" class="hover:text-gray-900 transition-colors">Privasi</a>
            <a href="#" class="hover:text-gray-900 transition-colors">Syarat</a>
          </div>
        </div>
        <div class="text-center">
          <p class="text-[9px] text-gray-300 font-normal lowercase tracking-normal">
            Developed by <a href="https://landingo.id" target="_blank" rel="noopener noreferrer" class="text-gray-400 hover:text-[#00a8a8] transition-colors underline">Landingo</a>
          </p>
        </div>
      </div>
    </footer>

    <script is:inline>
      (function() {
        function initScrollAnimations() {
          const observerOptions = {
            threshold: 0.1,
            rootMargin: '0px 0px -50px 0px'
          };

          const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
              if (entry.isIntersecting) {
                entry.target.classList.add('visible');
              }
            });
          }, observerOptions);

          document.querySelectorAll('.fade-in').forEach(el => {
            observer.observe(el);
          });
        }

        if (document.readyState === 'loading') {
          document.addEventListener('DOMContentLoaded', initScrollAnimations);
        } else {
          initScrollAnimations();
        }
      })();
    </script>
	</body>
</html>
