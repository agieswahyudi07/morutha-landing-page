---
import Logo from './Logo.astro';
import { ShoppingBag } from '@lucide/astro';
---

<nav class="sticky top-0 z-50 bg-white/90 backdrop-blur-sm border-b border-gray-100">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-24">
      <div class="pt-2">
        <Logo />
      </div>
      
      <div class="hidden md:flex items-center space-x-8 text-gray-600 font-semibold">
        <a href="/#story" class="hover:text-[#00a8a8] transition-colors">Tentang Kami</a>
        <a href="/products" class="hover:text-[#00a8a8] transition-colors">Produk</a>
        <a href="/#why-us" class="hover:text-[#00a8a8] transition-colors">Mengapa Kami</a>
      </div>

      <a 
        href="/products" 
        class="bg-[#00a8a8] hover:bg-[#008a8a] text-white px-6 py-2.5 rounded-full font-bold flex items-center gap-2 transition-all shadow-md shadow-teal-100 hover:-translate-y-0.5"
      >
        <ShoppingBag size={16} />
        Beli Sekarang
      </a>
    </div>
  </div>
</nav>

